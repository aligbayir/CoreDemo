@model IEnumerable<EntityLayer.Concrete.Comment>

@if (Model.Count() == 0)
{
    <h3>Bu Blogda Henüz Yorum Bulunmamaktadır. İlk Yorumu Siz Yazın..</h3>
}else
{
    <div class="comment-top">
        <h4>Yorumlar</h4>
        @foreach (var item in Model)
        {
                <div class="media">

                    <img src="~/web/images/t1.jpg" alt="" class="img-fluid" />
                    <div class="media-body">
                        <h5 class="mt-0">@item.CommentUserName</h5>
                        <p>
                        @item.CommentContent
                        </p>
                    </div>
                </div>
        }
    </div>
}
